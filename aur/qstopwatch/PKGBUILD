# Maintainer:  danyf90 <daniele.formichelli@gmail.com>

pkgname=qstopwatch-git
_pkgname=qstopwatch
pkgver=20131128
pkgrel=1
pkgdesc="A simple stopwatch application."
arch=('any')
license=('GPL3')
depends=('qt4')
makedepends=('git')
source=("$pkgname::git://bitbucket.org/fabiocarrara/$_pkgname")
sha512sums=("SKIP")

build() {
  cd $srcdir/$_pkgname-build

  qmake
  make
}

package() {
  cd $srcdir/$_pkgname-build

  install -D $srcdir/qstopwatch/QStopWatch $pkgdir/usr/bin/qstopwatch
}
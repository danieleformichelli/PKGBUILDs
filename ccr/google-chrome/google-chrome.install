post_install() {
  gtk-update-icon-cache -q -t -f /usr/share/icons/hicolor
  if [ ! -f /opt/google/chrome/libudev.so.0 ]; then
    ln -s /usr/lib/libudev.so /opt/google/chrome/libudev.so.0
  fi
}

post_remove() {
  gtk-update-icon-cache -q -t -f /usr/share/icons/hicolor
  rm -rf /opt/google/chrome/
}

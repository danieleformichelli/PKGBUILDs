# Maintainer: danyf90 <daniele.formichelli@gmail.com>

pkgname=android-support-repository
pkgver=r06
pkgrel=1
pkgdesc='Android Support Repository Package'
arch=('any')
url="https://developer.android.com/sdk/index.html"
license=('custom')
depends=('android-sdk')
options=('!strip')
source=("http://dl-ssl.google.com/android/repository/android_m2repository_$pkgver.zip"
        "source.properties")
sha512sums=('f53ffa192ebf396b6650cbb559a9f1e394889df9ca9d57fa4e9c628245f2035cc4c473567251836286317b08cf77f124dc6b14aa2c24ce452a388eca8e1e6920'
            '4eff517b19dd04408e29670cfa1d81a281120ead57826d367cd650ba49e1a2cb4390b1a6abe259e619dfd08554565959228954fbb81cfeb8649fa077ca2c50dc')

package() {
  cd $srcdir

  install -d $pkgdir/opt/android-sdk/extras/android/
  mv m2repository $pkgdir/opt/android-sdk/extras/android/m2repository
  install -Dm644 source.properties $pkgdir/opt/android-sdk/extras/android/m2repository
  chmod -R ugo+rX $pkgdir/opt
}

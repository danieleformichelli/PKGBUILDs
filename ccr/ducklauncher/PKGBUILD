#Contributor: Lothar_m <lothar_m at riseup dot net>

pkgname='ducklauncher'
_gitname='launcher'
pkgver=0.65.5
pkgrel=1
arch=('x86_64')
url="https://github.com/the-duck/launcher"
depends=('python2-pyside' 'python2-xlib' 'pygtk' 'python2-wnck' 'python2-cssutils' 'hicolor-icon-theme')
license=('GPL2')
pkgdesc="Duck Launcher Application Laucher by Mark Spurgeon"
install=$pkgname.install
source=("git://github.com/the-duck/$_gitname.git"
        "duck-launcher.desktop"
        "ducklauncher.install"	)
sha512sums=('SKIP'
            '96ae4513e38ed2efac5fde7d94d1769014627875acb42d491423f9ed5d2fb1977366f8360efe3e862703a3052f5eb9ebcdb05d9b9796bb586b5aed927b01e59d'
            'da7643deec402e9a7f6bf5fc49433055afb86b9240aed8bc9dd7349ea7c3c5a0e9d6fb0e5d0f2b30afceebd98a58f149e6c574d2df9f46d168c6d9b5e37c13e3')

package() {
  cd $srcdir

  ## Install executables
  install -D -m755 $_gitname/duck-launcher/Apps.py $pkgdir/usr/bin/duck-launcher/Apps.py
  install -D -m755 $_gitname/duck-launcher/Config.py $pkgdir/usr/bin/duck-launcher/Config.py
  install -D -m755 $_gitname/duck-launcher/Files.py $pkgdir/usr/bin/duck-launcher/Files.py
  install -D -m755 $_gitname/duck-launcher/Main.py $pkgdir/usr/bin/duck-launcher/Main.py
  install -D -m755 $_gitname/duck-launcher/Settings.py $pkgdir/usr/bin/duck-launcher/Settings.py
  install -D -m755 $_gitname/duck-launcher/Window.py $pkgdir/usr/bin/duck-launcher/Window.py
  install -D -m755 $_gitname/duck-launcher/XlibStuff.py $pkgdir/usr/bin/duck-launcher/XlibStuff.py

  ## Install icons
  install -D -m644 $_gitname/icons/add.svg $pkgdir/usr/share/duck-launcher/icons/add.svg
  install -D -m644 $_gitname/icons/apps.svg $pkgdir/usr/share/duck-launcher/icons/apps.svg
  install -D -m644 $_gitname/icons/back.svg $pkgdir/usr/share/duck-launcher/icons/back.svg
  install -D -m644 $_gitname/icons/close.svg $pkgdir/usr/share/duck-launcher/icons/close.svg
  install -D -m644 $_gitname/icons/file.svg $pkgdir/usr/share/duck-launcher/icons/file.svg
  install -D -m644 $_gitname/icons/folder.svg $pkgdir/usr/share/duck-launcher/icons/folder.svg
  install -D -m644 $_gitname/icons/home.svg $pkgdir/usr/share/duck-launcher/icons/home.svg
  install -D -m644 $_gitname/icons/open-apps.svg $pkgdir/usr/share/duck-launcher/icons/open-apps.svg
  install -D -m644 $_gitname/icons/quit.svg $pkgdir/usr/share/duck-launcher/icons/quit.svg
  install -D -m644 $_gitname/icons/settings.svg $pkgdir/usr/share/duck-launcher/icons/settings.svg
  install -D -m644 $_gitname/icons/star.svg $pkgdir/usr/share/duck-launcher/icons/star.svg
  install -D -m644 $_gitname/icons/win.svg $pkgdir/usr/share/duck-launcher/icons/win.svg
  install -D -m644 $_gitname/duck-launcher.svg $pkgdir/usr/share/icons/hicolor/scalable/duck-launcher.svg

  ## Install Desktop File
  install -D -m644 duck-launcher.desktop $pkgdir/usr/share/applications/duck-launcher.desktop
}

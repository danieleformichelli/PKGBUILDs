pkgname=android-google-play-services
pkgver=r20
_build=6111000
pkgrel=1
pkgdesc='Google Play Services client library and sample code'
arch=('any')
url="https://developers.google.com/android/google-play-services/"
license=('custom')
options=('!strip')
source=("http://dl.google.com/android/repository/google_play_services_${_build}_$pkgver.zip"
        "source.properties")
sha512sums=('e060d0afbb690c7d949addeec1c5f5acc0ffda1fdce0a57827286900f085495c39e6f11d7236d0531cb70fcb23d95fc9af7b83626dabb174278ea20b12035c16'
            'c681655225792fe5935d86c55b70d2e1cdd99ae9da3ad972168b76bd4e829eabc3da2676e3b54781adef722b9d8dba153dd8226267c0462fc06f483b4cf93fb0')

package() {
  cd $srcdir

  install -D source.properties $pkgdir/opt/android-sdk/extras/google/google_play_services/source.properties
  cp -dpr --no-preserve=ownership google-play-services $pkgdir/opt/android-sdk/extras/google/google_play_services

  chmod -R ugo+rX $pkgdir/opt
}

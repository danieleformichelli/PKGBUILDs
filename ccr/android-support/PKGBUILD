pkgname=android-support
pkgver=r21
pkgrel=1
pkgdesc='Android Support Package'
arch=('any')
url="https://developer.android.com/sdk/compatibility-library.html"
license=('custom')
depends=('android-sdk')
options=('!strip')
source=("http://dl-ssl.google.com/android/repository/support_$pkgver.zip")
sha512sums=('00ddaae93fd9d6b1d33b6f7520321b60b9157ceaf1eec37d6d2a107787a766da37ef1bb55116984e4494f6cbf0e343ac92b86970208c040708ef633611ee7237')

package() {
  cd $srcdir

  install -d $pkgdir/opt/android-sdk/extras/android
  mv support $pkgdir/opt/android-sdk/extras/android/support

  chmod -R ugo+rX $pkgdir/opt
}

# Contributor: xgdgsc <xgdgsc @t gmail dot com>

pkgname=android-sdk-build-tools
_ver=21.0.1
pkgver=r$_ver
pkgrel=1
pkgdesc='Build-Tools for Google Android SDK (aapt, aidl, dexdump, dx, llvm-rs-cc)'
arch=('x86_64')
url="http://developer.android.com/sdk/index.html"
license=('custom')
depends=('lib32-gcc-libs' 'lib32-zlib')
source=("http://dl-ssl.google.com/android/repository/build-tools_$pkgver-linux.zip")
sha512sums=('97c442188c9e9d3c3c8ae8d26bd33e3028b3a037b80752d854e8da5d45e94e2883689d4d203303d50319f84789b38b0517dd1bd0090fd688090e26856aa3f43f')
options=('!strip')
_sdk=android-sdk
_android=android-4.4W

package() {
  install -d $pkgdir/opt/$_sdk/build-tools/$_ver

  install -Dm644 $_android/NOTICE.txt $pkgdir/usr/share/licenses/$pkgname/NOTICE.txt

  cp -r $_android/* $pkgdir/opt/$_sdk/build-tools/$_ver
  chmod +Xr -R $pkgdir/opt/$_sdk/build-tools/$_ver
}
# Maintainer:  danyf90 <daniele.formichelli@gmail.com>
# Contributor: Travis Nickles <nickles.travis@gmail.com>

pkgname=antimicro
pkgver=2.0
pkgrel=1
pkgdesc="Graphical program used to map keyboard and mouse buttons to gamepad buttons"
arch=('x86_64')
url="https://github.com/Ryochan7/antimicro"
license=('GPL3')
depends=('libxtst' 'qt>=4.8' 'sdl2')
install=$pkgname.install
source=("https://github.com/Ryochan7/$pkgname/archive/$pkgver.tar.gz")
sha512sums=('69987cd74e50ccb3a90fcf10e89dab6a1e462520302b3c16fcbd2761565dd2ba243a629de90f9e7b61ef6ab5764421d74b5bea3df8f7d9112d5aea8bf11e5b86')

build() {
  cd $srcdir/$pkgname-$pkgver/src

  qmake INSTALL_PREFIX=/usr USE_SDL_2=1
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver/src

  make INSTALL_ROOT=$pkgdir install
}

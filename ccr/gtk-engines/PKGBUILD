pkgname=gtk-engines
pkgver=2.21.0
pkgrel=1
pkgdesc="Theme engines for GTK+ 2"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('gtk2>=2.22.0')
makedepends=('pkg-config' 'intltool')
options=('!libtool')
url="http://live.gnome.org/GnomeArt"
source=("ftp://ftp.archlinux.org/other/gtk-engines/$pkgname-$pkgver.tar.gz")
conflicts=('lighthouse-gtk2' 'clearlooks-gtk2')
replaces=('lighthouse-gtk2')
sha512sums=('2dbd9d57ba09dca7a343d966f15b00c97ff564d9c284b743a0a661a3fba596ed8ec90dd4e155dd1672cca2e9e478034c384fd13a98b1fe0656e0635cc530040b')

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=/usr --enable-animation
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}


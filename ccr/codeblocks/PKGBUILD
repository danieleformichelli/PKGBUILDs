# Contributor: Janek Bevendorff <janek at refining-linux dot org>

pkgname=codeblocks
pkgver=13.12
pkgrel=1
pkgdesc="An open source and cross-platform C/C++ IDE"
arch=('x86_64')
url="http://www.codeblocks.org"
license=('GPL3')
depends=('boost-libs' 'bzip2' 'desktop-file-utils' 'gamin' 'gtk-update-icon-cache'
         'hicolor-icon-theme' 'hunspell' 'shared-mime-info' 'wxgtk' 'libsm')
makedepends=('boost' 'zip')
options=('!libtool')
install=codeblocks.install
source=("http://download.berlios.de/$pkgname/${pkgname}_${pkgver}-1.tar.gz")
sha512sums=('f09ab25579a4c9addcebdcc748a23963a52751853f4a1c15da10196d522f94bb17e01b2470b96d4470f5fd98725f7760e3923762c2217bcc48051eb9f7286f58')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr --with-contrib-plugins=all
  make
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR=$pkgdir install
}
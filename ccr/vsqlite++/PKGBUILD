pkgname=vsqlite++
pkgver=0.3.12
pkgrel=1
pkgdesc="SQLite wrapper library for C++"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/sqlitepp/"
license=('BSD')
depends=('sqlite3')
makedepends=('boost')
source=("http://downloads.sourceforge.net/sqlitepp/$pkgname-$pkgver.tar.gz")
sha512sums=('63d2818bf1c2c90206aae7539c7f56c50a424878e772ff867daff89996308c3756dc90ad63a7aecccc5431e871250c2cd4806ef9f411de2c58c2690583a7d957')

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver

  make DESTDIR=$pkgdir install
}


# Maintainer: danyf90 <daniele.formichelli@gmail.com>

pkgname=portolan
pkgver=beta
pkgrel=7
pkgdesc="Portolan internet measurement tool"
arch=('any')
depends=('java-runtime>=6' 'wireless_tools')
license=('custom')
url="http://portolan.iet.unipi.it/"
install=$pkgname.install
source=("http://portolan.iet.unipi.it/wp-content/uploads/2014/11/portolan.tar.gz")
sha512sums=('1bd770ae0acefd29c76811f84c973aedce96d167634b9863504a55e8f95b5d513be2261865836076509a2f9f5e35bb1ec79ceb1f5d4f16a18f1e7c526d5c32fa')

package() {
  cd $srcdir/$pkgname/linux

  # Remove final wait and set installation directory
  sed -i "s/read.*//" install.sh
  export DESTDIR=$pkgdir

  ./install.sh > /dev/null

  # Remove unused file
  rm -r $pkgdir/etc
  rm $pkgdir/usr/share/$pkgname/uninstall.sh
}
